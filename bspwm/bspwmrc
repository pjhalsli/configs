# Autostart Some Shit
pgrep -x sxhkd > /dev/null || sxhkd &
picom &
dunst &
$HOME/.config/polybar/launch.sh

# Wallpaper
#hsetroot -gradient 10 '#ad5770' '#DF7191' &
#feh --bg-fill Bilder/wp/stones.png
nitrogen --restore &
#bwall &


# bitmap fonts
xset +fp ~/.local/share/fonts &
xset fp rehash &
xset fp+ /usr/share/fonts/bitmap &

bspc monitor -d I II III IV V VI VII VIII IX X

# appearance  
bspc config border_width 4
bspc config window_gap  16

#bspc config window_gap $gap;
bspc config top_padding $(($PANEL_HEIGHT-gap)) 30
#bspc config left_padding -$gap
#bspc config right_padding -$gap
#bspc config bottom_padding -$gap

# Set the border colors - without pywal
# Dracula
bspc config normal_border_color "#1c1b1d"
bspc config active_border_color "#6272a4"
bspc config focused_border_color "#f0f0f0"
bspc config presel_feedback_color "#6272a4"

# ICEBERG
#bspc config normal_border_color "#161821"
#bspc config active_border_color "#7CABA3"
#bspc config focused_border_color "#84A0C6"
#bspc config presel_feedback_color "#101113"

bspc config single_monocle       true
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config focus_follows_pointer true
bspc config pointer_follows_focus false
bspc config center_pseudo_tiled true
bspc config ignore_ewmh_focus true

bspc config split_ratio          0.50

# Automatic Splitting Settings
bspc config automatic_scheme	spiral
bspc config initial_polarity	second_child




# Some personal rules
bspc rule -a firefox desktop=I follow=off 
bspc rule -a qutebrowser desktop=I follow=off
bspc rule -a Opera desktop=I follow=off
bspc rule -a brave desktop=I follow=off
bspc rule -a TelegramDesktop desktop=II follow=off
bspc rule -a Thunar desktop=III follow=off 
bspc rule -a Zathura state=tiled
bspc rule -a Transmission-gtk desktop=VIII focus=off follow=off
bspc rule -a feh state=floating focus=on
bspc rule -a mpv state=floating
bspc rule -a Gcolor3 state=floating focus=on


#config external_rules_command ~/.config/bspwm/scripts/borderless


function reset_color_if_not_VIM {
	#autocmd events in ~/.vimrc will handle case where window is VIM
	node_id=$(echo $1 | grep -oE '[^ ]+$')
	node_name=$(xtitle $node_id)
	if [[ $node_name != *"VIM"* ]]; then
		$HOME/.vim/bspwm_border_color/reset
	fi
}

bspc subscribe node_focus | while read -r line; do reset_color_if_not_VIM "$line"; done





# vim: ft=sh

