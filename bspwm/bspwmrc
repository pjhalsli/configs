#! /bin/sh

# autostart some shit
sxhkd &
compton &
dunst &
feh --bg-tile Bilder/wp/tile8.jpg
$HOME/.config/polybar/launch.sh


bspc monitor -d I II III IV V VI VII VIII IX X
#bspc monitor -d www trm fls mpd pht cds rdt trnt cht 10

bspc config border_width        2
bspc config window_gap          14 

bspc config window_gap $gap;
bspc config top_padding $(($PANEL_HEIGHT-gap))
bspc config left_padding -$gap
bspc config right_padding -$gap
bspc config bottom_padding -$gap


## pywal
## source the colors.
#. "${HOME}/.cache/wal/colors.sh"

## Set the border colors.
#bspc config normal_border_color "$color1"
#bspc config active_border_color "$color2"
#bspc config focused_border_color "$color15"
#bspc config presel_feedback_color "$color1"

# Set the border colors
bspc config normal_border_color "#3B4252"
bspc config active_border_color "#08090A"
bspc config focused_border_color "#E5E9F0"
bspc config presel_feedback_color "#3B4252"

bspc config split_ratio          0.50
bspc config single_monocle       false
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config focus_follows_pointer true
bspc config pointer_follows_focus false
bspc config center_pseudo_tiled true

# Automatic Splitting Settings
bspc config automatic_scheme	longest_side
bspc config initial_polarity	second_child

bspc config top_padding 41 
#bspc config bottom_padding 10 
#bspc config left_padding 10
#bspc config right_padding 10

bspc rule --add Firefox desktop=I follow=off 
bspc rule --add qutebrowser desktop=I follow=off
bspc rule --add Opera desktop=I follow=off
bspc rule --add Thunar desktop=III follow=off 
bspc rule --add Transmission-gtk desktop=VIII state=pseudo_tiled center=on follow=off 
bspc rule --add 'Termite -e weechat' desktop=IX follow=on
bspc rule --add feh state=floating focus=on
bspc rule --add mpv state=floating
bspc rule --add Kupfer.py focus=on
bspc rule --add Screenkey manage=off
bspc rule --add termite -e weechat desktop=IX split_ratio=0.66
